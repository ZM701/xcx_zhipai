/* components/article/article.wxss */
.plantContent>view{
  font-size: 14px;
  width: 100%;
  height: 68px;
  padding: 8px 8px 0px 8px;
  border-bottom: 1px solid #EFEFF4;
}
.plantContent>view image{
  width: 100px;
  height: 60px;
  float: left;
  margin-right: 10px;
}
.plantContent>view view{
  width: 60%;
  float: left;
}
.plantContent>view view text{
  display: block;
}
.plantContent>view view text:first-of-type{
  margin-bottom: 5px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.plantContent>view view text:last-of-type{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-wrap:break-word; 
  word-break:break-all; 
  font-size: 13px;
}