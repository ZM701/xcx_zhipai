/* pages/aboutUs/aboutUs.wxss */
/*全部背景  */
page{
  width: 100%;
  height: 100%;
}
.about{
  width: 100%;
  height: 100%;
}
.about image{
  display: block;
  width: 100%;
  height: 100%;
}

.aboutUs{
  position: fixed;
  top: 10%;
  left: 0;
  width: 100%;
  height: 400px;
  
}
.aboutUs view{
  display: flex;
  flex-direction:column;
}

.logo{
  display: block;
  width:126rpx;height:126rpx;
  background: #a9e29a;
  margin: 0 auto;
  border-radius: 15rpx;
}
.logo image{
 border-radius: 15rpx;background: #a9e29a;
}
.num{
  color: #282828;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}
.word{
  color: #717171;
  font-size: 26rpx;
  margin-top: 10rpx;
  text-align: center;
}
.info{
  display: flex;
  flex-direction:column;
  background: #fff;
  width: 80%;
  margin: 40rpx auto;
  border-radius: 20rpx;
  margin-bottom: 40px;
  padding: 10px;
}

.contact{
  margin-top: 20rpx; 
}
.contact view:first-child{
  color: #282828;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  text-align: center;
}
.contact view{
  color: #535353;
  font-size: 26rpx;
}
.contact .contents{
  text-align: left;
  text-indent: 20px;
  margin-bottom: 10rpx;
  line-height: 16px;
}

.advice{
  margin-top: 30rpx;
  text-align: center;
}
.advice view{
  color: #525252;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.advice>view:first-child{
  color: #282828;
  font-size: 26rpx;
  font-weight: bold;
}

.copyright{
   color: #282828;
  font-size: 26rpx;text-align: center;
  margin-top: 60rpx;
}