/* pages/goodFriends/goodFriends.wxss */
page{
    width: 100%;
    height: 100%; 
}
.container{
    width: 100%;
    height: 100%;
}
.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 32rpx;
    white-space: nowrap;
    position: fixed;
    left: 0;
    z-index: 99;
}
.nav-item {
    width: 33.33%;
    display: inline-block;
    text-align: center;
}
.nav-item.active{
    height: 78rpx;
    border-bottom:2px solid #C4EBB9;
    color: #C4EBB9;
}
.tab-box{
    padding-top: 0rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}
/* 去掉滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
/* 关注 */
.privateLetter{
  padding: 8px;
  border-bottom:1px solid #E2E2E2;
}
.privateLetter:first-of-type{
  padding-top: 0;
}
.privateLetter:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.privateLetter>view{
  float: left;
}
.privateLetter>view:first-of-type image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 6px;
}
.privateLetter>view:last-of-type{
   width: 83%; 
   overflow: hidden;
}

.privateLetter .user{
  font-size: 14px;
  overflow: hidden;
  text-align: left;
}
.privateLetter .user image{
  display: inline-block;
  width: 10px;
  height: 10px;
  vertical-align: middle;
  margin-right: 2px;
}
.privateLetter .user{
  float: left;
}
.privateLetter .user text{
  font-size: 14px;
  line-height: 40px;
  color: #222;
}
.privateLetter .res{
  font-size: 12px;
  color: #999;
  margin-top: 8px;
  text-align: left;
  margin-bottom: 6px;
}
.privateLetter .desc{
  float: right;
  background: #a9e29a;
  padding: 5px 12px;
  border-radius: 15px;
  font-size: 11px;
  color: #fff;
  margin-top: 8px;
}
/* 关注 */
.privateLetter .attention{
  display: block;
  border: 1px solid #ef1600;
  border-radius: 20px;
  padding: 5px 10px; 
  color:#ef1600;
  font-size: 11px;
}
/* 已关注 */
.privateLetter .already{
  float: right;
  margin-top: 8px;
}
.privateLetter .already .alreadyAttention{
  border: 1px solid #c6c6c6;
  border-radius: 20px;
  padding: 0px 10px; 
  color:#656565;
  font-size: 11px;
  height: 25px;
  line-height: 25px;
}
.privateLetter .already image{
  width: 10px;
  height: 7px;
  margin-right: 2px;
}
.none image{
  width: 100px;
  height: 90px;
  display: block;
  margin: 50px auto 10px;
}
.none{
  text-align:center;
  color: #CECECE;
}