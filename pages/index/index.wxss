/* pages/index/index.wxss */
@import "../template/footer/footer.wxss";
.list-box{ height: 550rpx;margin-top: 30rpx;}
.list-item{ width: 600rpx; height: 230rpx; background: #fff; padding: 15rpx; overflow: hidden; margin: 10rpx auto; box-shadow: 0px 0px 6px rgba(0, 0, 0, .2)}
.list-item image{ width: 280rpx; height: 230rpx; margin-right: 20rpx}
.name{ text-align: center; margin: 5rpx 0 10rpx;}
.family ,.nameEn,.des{font-size: 24rpx; color: #999}
.family { border-bottom: 1rpx solid #ddd; padding-bottom: 10rpx; margin-bottom: 10rpx;}

.other-click,.watch-click{width: 700rpx; margin:30rpx auto 0;}
.other-click>view,.watch-click>view{ flex: 1; font-size: 28rpx;}
.other-click .cat-phone,.other-click .creat-img,.watch-click .cat-phone,.watch-click .cat-album{ width: 95%; margin: 0 auto; position: relative; text-align: center; font-size: 30rpx; height: 80rpx; line-height: 80rpx;  border-radius: 100rpx;}
.other-click .creat-img,.watch-click .cat-phone{color: #fff; background: #99cc99}
.other-click .cat-phone,.watch-click .cat-album{color: #99cc99}
.other-click .cat-phone::after,.watch-click .cat-album::after{ content: '';
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    border: 1px solid #99cc99;
    border-radius: 100rpx;
    -webkit-transform: scale(0.5,0.5);
    transform: scale(0.5,0.5);
    -webkit-transform-origin: top left;}

.from-album{ text-align: center; margin: 45rpx; color: #999; font-size: 24rpx;}
.btn{
  padding: 4px 8px;
  color: #99CC99;
  border:1px solid #99CC99;
  border-radius: 10px;
  text-align: center;
  font-size: 14px;
  margin-top: 25px !important;
}
.covers{
  width: 280rpx; height: 230rpx;
  margin-right: 20rpx;
  position: relative;
}
.covers image{
  position: absolute;
  left: 0;
  top:0;
}
.covers view{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, .4);
  color: #fff;
  text-align: center;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
} 

