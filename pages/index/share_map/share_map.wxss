.canvas-box{ margin-bottom:280rpx;}
.bottom-cont {
  position: fixed;
  width: 100%;
  height: auto;
  left: 0;
  bottom: 0;
  background: #eee;
  z-index: 100;
}
.cont-box{ background: #fff; padding: 10rpx 0;}
.save {
  width: 40%;
  margin: 0 auto;
  position: relative;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  background: #9c9;
  color: #fff;
}

.share {
  width: 40%;
  margin: 0 auto;
  position: relative;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  color: #9c9;
}
.share::after {
  content: '';
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #9c9;
  border-radius: 100rpx;
  -webkit-transform: scale(0.5, 0.5);
  transform: scale(0.5, 0.5);
  -webkit-transform-origin: top left;
} 


.swiper{ height: 160rpx; margin:10rpx 0; }
.slide-image{ width: 100rpx;height: 150rpx; overflow: hidden; margin: 0 auto; display: block; border: 2px solid #fff;}