/* pages/login/login.wxss */

.logo {
  width: 300rpx;
  height: 300rpx;
  background: #ddd;
  border-radius: 300rpx;
  margin: 100rpx auto 100rpx;
  overflow: hidden;
}

.logo image {
  width: 100%;
  height: 100%;
}

.login-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
}

.wx-login {
  width: 60%;
  margin: 0 auto;
  position: relative;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  background: #9c9;
   color: #fff;
}

.wx-login text {
 font-size: 46rpx;
 line-height: 68rpx;
}


