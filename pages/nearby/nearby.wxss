/* pages/nearby/nearby.wxss */
@import "../template/footer/footer.wxss";
@import "../../components/wxSearchView/wxSearchView.wxss";
.top{
  position: fixed;
  right: 15rpx;
  top:10rpx; 
  z-index: 999;
}
.top .ims{
  float: left;
  width: 30px;
  height: 30px;
  margin-right: 15rpx;
}
.content{
  width: 100%;
  position: fixed;
  z-index: 999;
  bottom: 70px;
  min-height: 180px; 
}
.icons{
  position: absolute;
  background: #fff;
  width: 30px;
  height: 60px;
  right: 10px;
  border-radius: 8px;
}
.icons .imgs{
  width: 15px;
  height: 15px;
  display: block;
  margin: 10px auto;
}
.mainContent{
  position: absolute; 
  width: 100%;
  height: 110px;
  overflow: hidden;
  bottom:0;
  background: #fff;
}
.iconfont{
  position: absolute;
  width: 30px;
  height: 110px;
  line-height: 110px;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  /* background: rgba(0, 0, 0, 0.5)  */
}
.icon-left{
  left: 0;
  z-index: 999;
}
.icon-right{
  right: 0;
}

.main{
  position: absolute; 
  bottom:0;
  width: 10000%; 
  /* height: 130px; */
}
.main .scroll-view-item{
  /* height: 110px; */
  background: red;
  float: left;
  padding: 7px 40px; 
  background: #fff;
}
.mainLeft{
  float: left;
  width: 180rpx;
  height: 200rpx;
  margin-right: 10px;
}
.mainRight{
  float: left;
  width: 360rpx;
  overflow:hidden;
}
.name{
  color: rgb(0, 34, 34);
  font-size: 12px;
  margin: 4px 0 2px 0;
}
.otherName{
  width: 165px;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  color: rgb(102, 102, 102);
  font-size: 12px;
  margin: 4px 0;
}
.kind{
  width: 165px;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  color: rgb(102, 102, 102);
  font-size: 12px;
  /* padding-bottom: 4px; */
  margin-bottom: 4px;
}
.user{
  overflow: hidden;
}
.user .userImg{
  float: left;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 4px;
}
.nick{
  overflow: hidden;
  /* padding-top: 2px; */
  /* padding-bottom: 2px; */
}
.user .userInfo{
  float: left;
  font-size: 22rpx;
  color: rgb(102, 102, 102);
}
.user .userInfo .infoImage{
  float: left;
  width: 10px;
  height: 10px;
  vertical-align: middle;
}
.nickName{
  float: left;
}
/*高德地图=====================================  */
.map_container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.bottoms{
  bottom:160px !important;
}
.map{
  width: 100%; 
  height: 100%;
}
.map_text{
  position:fixed;
  left: 0;
  right: 0;
  bottom:30px;
  height:130px;
  background:#fff; 
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
.contbox{ background: #fff; margin: 8rpx auto 0; padding: 10rpx;  height:200rpx; box-shadow: 0px 0px 6px rgba(0,0,0,.2);  }

