/* pages/sign/sign.wxss */
.sign{
  background: #5DD5CC;
  overflow: hidden;
  padding: 10px 23px 0 23px;
}
.share{
  overflow: hidden;
  margin-bottom: 15px;
}
.share .back{
  float: left;
}
.share .back image{
  width: 24px;
  height: 24px;
}
.share .shareIcon{
  float: right;
}
.share .shareIcon image{
  width: 16px;
  height: 17px;
}
.content{
  border:2px solid #fff;
  padding-left: 10px;
}
.content .main{
  overflow: hidden;
}
.content .main view:first-of-type{
  float: left;
  
}
.content .main view:first-of-type text{
  display: block;
}
.content .main .fraction{
  position: relative;
  height: 70px;

}
.content .main .fraction .one{
  color: #fff;
  font-weight: bold;
  font-size: 26px;
}
.content .main .fraction .two{
  background: #fff;
  height: 1px;
  width: 50px;
  transform: rotate(150deg);
  
}
.content .main .fraction .three{
  color: #fff;
  font-size: 22px;
  position: absolute;
  right: 10px;
}
.content .main .four{
  color: #fff;
  font-size: 20px;
}
.content .cover{
  float: right;
  width: 78%;
  overflow: hidden;
  position:relative;
}
.cover:after{
  position:absolute;
  content:'';
  width:100%;
  height:100%;
  top:0;
  left:0;
  box-shadow:0 0 40px 10px rgba(255,255,255,.7) inset;
}
.cover image{
  display: block;
}
.content .desc{
  width: 85%;
  font-size: 13px;
  color: #fff;
  margin-left: 10px;
  margin-top: 15px;
  line-height: 20px;
  text-indent: 28px;
  text-align: justify;
}
.content .name{
  text-align: right;
  font-size: 13px;
  color: #fff;
  padding-right: 5px;
  margin-top: 10px;
  margin-bottom: 13px;
}
.integral{
  margin-top: 10px;
  font-size: 16px;
  color: #fff;
  margin-left: 5px;
  padding-bottom: 10px;
}